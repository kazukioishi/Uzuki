<UserControl x:Class="Uzuki.Controls.ThreadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:link="clr-namespace:Uzuki.Controls"
             xmlns:converters="clr-namespace:Uzuki.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        
        <ScrollViewer VerticalScrollBarVisibility = "Auto">
            <ListView Name="ThreadListView">
                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <Border BorderThickness="0">
                            <ItemsPresenter Margin="0" />
                        </Border>
                    </ControlTemplate>
                </ItemsControl.Template>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                        <!--<WrapPanel Orientation="Horizontal" />-->
                        <!-- (3) <Grid /> -->
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.Resources>
                    <converters:ListBoxIndexConverter x:Key="listBoxIndexConverter" />
                </ItemsControl.Resources>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FF707070" BorderThickness="0,0,0,0.1">
                            <StackPanel Margin="5">
                                <TextBlock TextWrapping="Wrap" FontWeight="Normal" FontSize="13">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource listBoxIndexConverter}">
                                            <Binding />
                                            <Binding ElementName="ThreadListView" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                    <Run Text="" />
                                    <Run Text="{Binding Name}" />
                                    <Run Text="{Binding Adress}" />
                                    <Run Text="{Binding ID}" />
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap" Margin="5" FontSize="15" Text="{Binding Message}">
                                    <link:HyperlinkText.Inline>
                                        <Binding Path="Message" />
                                    </link:HyperlinkText.Inline>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
